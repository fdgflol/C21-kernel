;boot9.asm
[org 0x7C00]
bits 16
start:
cli
xor ax, ax
mov ds, ax
mov es, ax
mov ss, ax
mov sp, 0x7C00
mov bx, 0x0000
mov ax, 0x1000
mov es, ax
mov ah, 0x02
mov al, 20
mov ch, 0x00
mov cl, 0x02
mov dh, 0x00
mov dl, [BOOT_DRIVE]
int 0x13
jc disk_error
jmp 0x1000:0000
disk_error:
mov si, msg_err
.print:
    lodsb
or al, al
jz .done
mov ah, 0x0E
int 0x10
jmp .print
.done:
msg_err db 'FATAL: failed to read disk!',0
BOOT_DRIVE db 0
times 510-($-$$) db 0
dw 0xAA55         ; SIGNATURE
